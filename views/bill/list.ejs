<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>列表</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
          <div class="row">
            <div class="col-12 text-end">
              <h2><a href="/auth/logout" class="btn btn-warning">退出</a></h2>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-6">
              <h2>列表</h2>
            </div>
            <div class="col-6 text-end">
              <h2><a href="/bill/add" class="btn btn-primary">添加</a></h2>
            </div>
          </div>
          <hr>
          <div>
            <% if (data) { %>
              <% data.forEach(bill => { %>
                <div class="card mb-3">
                  <div class="card-header <%= bill.type > 0 ? 'text-bg-success' : 'text-bg-warning' %>"><%=bill.date %></div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-4"><%=bill.title %></div>
                      <div class="col-2 text-center">
                        <span class="badge <%= bill.type > 0 ? 'bg-success' : 'bg-warning' %>">
                          <%= bill.type > 0 ? '收入' : '支出' %>
                        </span>
                      </div>
                      <div class="col-2 text-end"><%=bill.cost %></div>
                      <div class="col-4 text-end">
                        <a href="/bill/detail/<%=bill.id %>" class="btn btn-sm btn-primary">详情</a>
                        <a href="/bill/edit/<%=bill.id %>" class="btn btn-sm btn-secondary">修改</a>
                        <a href="/bill/delete/<%=bill.id %>" class="btn btn-sm btn-danger">删除</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
